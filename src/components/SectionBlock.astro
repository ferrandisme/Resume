---
interface Props {
  id: string;
  title: string;
  eyebrow?: string;
  intro?: string;
}

const { id, title, eyebrow, intro } = Astro.props;
---

<section id={id} class="section" aria-labelledby={`${id}-title`}>
  <header class="section-head reveal">
    {eyebrow && <p class="eyebrow">{eyebrow}</p>}
    <h2 id={`${id}-title`}>{title}</h2>
    {intro && <p class="section-intro">{intro}</p>}
  </header>
  <slot />
</section>
