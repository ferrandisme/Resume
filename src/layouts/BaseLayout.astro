---
import '../styles/global.css';
import { siteConfig } from '../data/site';
import { defaultLocale, localizeText, type Locale } from '../i18n/config';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  locale?: Locale;
  autoDetectLocale?: boolean;
  alternates?: Array<{ hreflang: string; href: string }>;
  structuredData?: Record<string, unknown> | Array<Record<string, unknown>>;
}

const {
  title,
  description,
  image = '/og-adrian.svg',
  canonical,
  noindex = false,
  locale = defaultLocale,
  autoDetectLocale = false,
  alternates = [],
  structuredData,
} = Astro.props;

const computedDescription = description ?? localizeText(siteConfig.seo.description, locale);
const computedTitle = title
  ? localizeText(siteConfig.seo.titleTemplate, locale).replace('%s', title)
  : localizeText(siteConfig.seo.defaultTitle, locale);

const canonicalUrl = canonical ?? new URL(Astro.url.pathname, siteConfig.siteUrl).toString();
const ogImageUrl = new URL(image, siteConfig.siteUrl).toString();
const ogLocale = locale === 'es' ? 'es_ES' : 'en_US';
const skipLinkLabel = locale === 'es' ? 'Saltar al contenido' : 'Skip to content';
---

<!doctype html>
<html lang={locale} data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={computedDescription} />
    <meta name="theme-color" content="#f6f4ee" />

    <script is:inline>
      (() => {
        const saved = localStorage.getItem('theme');
        let preferred = 'light';

        if (typeof window.matchMedia === 'function') {
          preferred = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        const nextTheme = saved === 'dark' || saved === 'light' ? saved : preferred;
        document.documentElement.dataset.theme = nextTheme;
      })();
    </script>
    {autoDetectLocale && (
      <script is:inline>
        (() => {
          try {
            if (window.location.pathname !== '/') return;

            const savedLocale = localStorage.getItem('locale');
            if (savedLocale === 'en') {
              window.location.replace('/en/');
              return;
            }

            if (savedLocale === 'es') return;

            const languageList =
              Array.isArray(navigator.languages) && navigator.languages.length > 0
                ? navigator.languages
                : navigator.language
                  ? [navigator.language]
                  : [];

            if (languageList.length === 0) {
              localStorage.setItem('locale', 'en');
              window.location.replace('/en/');
              return;
            }

            const detectedLocale = languageList.some((item) => String(item).toLowerCase().startsWith('es'))
              ? 'es'
              : 'en';

            localStorage.setItem('locale', detectedLocale);
            if (detectedLocale === 'en') window.location.replace('/en/');
          } catch {
            window.location.replace('/en/');
          }
        })();
      </script>
    )}

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="canonical" href={canonicalUrl} />
    {alternates.map((item) => <link rel="alternate" hreflang={item.hreflang} href={item.href} />)}

    <meta property="og:type" content="website" />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:title" content={computedTitle} />
    <meta property="og:description" content={computedDescription} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={computedTitle} />
    <meta name="twitter:description" content={computedDescription} />
    <meta name="twitter:image" content={ogImageUrl} />

    {noindex && <meta name="robots" content="noindex, nofollow" />}

    {structuredData && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}

    <title>{computedTitle}</title>
  </head>
  <body>
    <a class="skip-link" href="#main-content">{skipLinkLabel}</a>
    <slot />
  </body>
</html>
